<h1>Reset your password</h1>

<%= form_with model: @user,url: password_reset_edit_path(token: params[:token]) do |form| %>
   <% if form.object.errors.any? %>
    <ul>
        <% form.object.errors.full_messages.each do |msg| %>
            <li><%= msg %></li> 
        <% end %>
    </ul>
    <% end %>
    <div class="mb-3">
        <%= form.label :password %>
        <%= form.text_field :password, class: "form-control", placeholder: "password" %>
    </div>

    <div class="mb-3">
        <%= form.label :password_confirmation %>
        <%= form.text_field :password_confirmation, class: "form-control", placeholder: "password" %>
    </div>
    <%= form.submit "Reset Password", class: "btn btn-primary" %>
<% end %>