<h1>Sign in</h1>

<%= form_with url: signin_path do |form| %>

    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, class: "form-control", placeholder: "johndoe@gmail.com" %>
    </div>

    <div class="mb-3">
        <%= form.label :password %>
        <%= form.password_field :password, class: "form-control", placeholder: "password" %>
        <%= link_to "Forgot your password?", password_resets_path %>
    </div>
    <%= form.submit "Sign in", class: "btn btn-primary" %>
<% end %>